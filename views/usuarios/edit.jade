extends ../layout

block content
  h1 Atualizar Usu√°rio
  br
    
  if messages.erro 
    div(class='alert alert-danger', role='alert')
      h3 Erro(s):
      each msg in messages.erro
        p #{msg}
    br
  
  form(method="post", action="/usuarios/edit/#{dados._id}", role="form")
    div(class="form-group")
      label(for="nome") Nome
      input(type="text", class="form-control", id="nome", name="nome", placeholder="Nome", value='#{dados.nome}')
    
    div(class="form-group")
      label(for="email") E-mail
      input(type="email", class='form-control', id='email', name='email', placeholder='E-mail', value='#{dados.email}', disabled) 
    
    div(class="form-group")
      label(for="site") Site
      input(type="text", class='form-control', id='site', name='site', value='#{dados.site}') 
      
    button(type='submit', class='btn btn-success') Salvar
